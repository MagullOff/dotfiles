[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
ws-icon-0 = "1;game"
ws-icon-1 = "2;web"
ws-icon-2 = "3;chat"
ws-icon-3 = "10;music"
ws-icon-default = 

